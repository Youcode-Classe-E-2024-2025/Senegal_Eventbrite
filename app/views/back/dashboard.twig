<script>
    document.addEventListener("DOMContentLoaded", function() {
    // Attach click event to pagination links
    const paginationLinks = document.querySelectorAll("#pagination-links a");

    paginationLinks.forEach(link => {
        link.addEventListener("click", function(e) {
            e.preventDefault();  // Prevent the default link behavior

            const page = this.getAttribute("data-page");
            fetchUsers(page);
        });
    });

    function fetchUsers(page) {
        const url = `/admin?page=${page}`;

        // Fetch data from the server using AJAX
        fetch(url, { cache: "no-store" })  // Prevent caching of the response
            .then(response => response.text())
            .then(data => {
                console.log(data); // Debugging output, check the response

                // Replace the content in the #user-list section with the new data
                document.getElementById("user-list").innerHTML = extractUserList(data);

                // Update pagination links
                document.getElementById("pagination-links").innerHTML = extractPaginationLinks(data);

                // Ensure to reattach the click event to new pagination links (if any)
                const newPaginationLinks = document.querySelectorAll("#pagination-links a");
                newPaginationLinks.forEach(link => {
                    link.addEventListener("click", function(e) {
                        e.preventDefault();  // Prevent the default link behavior

                        const page = this.getAttribute("data-page");
                        fetchUsers(page);
                    });
                });
            })
            .catch(error => console.error("Error fetching users:", error));
    }

    function extractUserList(html) {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, "text/html");
        return doc.querySelector("#user-list").innerHTML;
    }

    function extractPaginationLinks(html) {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, "text/html");
        return doc.querySelector("#pagination-links").innerHTML;
    }
});

</script>

