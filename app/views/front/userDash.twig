<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Event Management Profile – Dark Theme</title>
  <!-- Font Awesome for ticket icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Global dark theme overrides */
    body {
      background-color: #333;
      color: #eee;
    }
    /* These classes override Tailwind’s defaults to fit our dark theme */
    .bg-card {
      background-color: #444;
    }
    .border-border {
      border-color: #555;
    }
    .text-foreground {
      color: #eee;
    }
    .text-accent {
      color: #f39c12;
    }
    .bg-primary {
      background-color: #e74c3c;
    }
    .text-primary-foreground {
      color: #fff;
    }
    .bg-secondary {
      background-color: #3498db;
    }
    .text-secondary-foreground {
      color: #fff;
    }
    .bg-muted {
      background-color: #555;
    }
    .text-chart-2 {
      color: #2ecc71;
    }
    .text-chart-3 {
      color: #9b59b6;
    }

  </style>
</head>
<body class="min-h-screen">
  <div class="flex">
    <!-- Sidebar Navigation -->
    <aside class="fixed inset-y-0 left-0 w-64 bg-card shadow-sm border-r border-border">
      <div class="p-4 border-b border-border">
        <div class="flex items-center gap-2">
          <img src="https://images.unsplash.com/photo-1517292987719-0369a794ec0f" alt="Logo" class="w-8 h-8 rounded-full">
          <h1 class="text-xl font-bold text-foreground">EventHub</h1>
        </div>
      </div>
      <nav class="p-4 space-y-2">
        <a href="/" class="flex items-center gap-2 p-2 rounded-sm text-primary hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Home</span>
        </a>
        <a href="/createEvent" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Create Event</span>
        </a>
        <a href="#events" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Event Management</span>
        </a>
        <a href="#sales" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Sales & Registration</span>
        </a>
        <a href="#promo" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Promotional Tools</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="ml-64 p-8 w-full space-y-8">
      
      <!-- Sales Section -->
      <section id="sales" class="mb-8">
        <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-foreground">Sales Overview</h2>
            <div class="flex gap-4">
              <button class="px-4 py-2 bg-secondary text-secondary-foreground rounded-sm hover:bg-muted transition-colors">Export CSV</button>
              <button class="px-4 py-2 bg-secondary text-secondary-foreground rounded-sm hover:bg-muted transition-colors">Export PDF</button>
            </div>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-muted">
                <tr>
                  <th class="p-4 text-left text-sm font-medium text-accent">Event Name</th>
                  <th class="p-4 text-left text-sm font-medium text-accent">Tickets Sold</th>
                  <th class="p-4 text-left text-sm font-medium text-accent">Revenue</th>
                  <th class="p-4 text-left text-sm font-medium text-accent">Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border">
                <tr>
                  <td class="p-4 text-foreground">Tech Conference 2024</td>
                  <td class="p-4 text-foreground">45/100</td>
                  <td class="p-4 text-foreground">$4,500</td>
                  <td class="p-4">
                    <span class="px-2 py-1 bg-chart-2 text-primary-foreground rounded-sm text-sm">Active</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <!-- Promotional Tools Section -->
<section id="promo" class="mb-8">
  <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
    <h2 class="text-2xl font-bold text-foreground mb-6">Promotional Tools</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="p-4 border border-border rounded-sm">
        <h3 class="text-lg font-semibold text-foreground mb-4">Create Promo Code</h3>
        <form id="promoForm" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-accent mb-2">Code</label>
            <input type="text" id="code" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white" required>
          </div>
          <div>
            <label class="block text-sm font-medium text-accent mb-2">Discount (%)</label>
            <input type="number" id="discount" min="0" max="100" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white" required>
          </div>
          <div>
            <label class="block text-sm font-medium text-accent mb-2">Active Days</label>
            <input type="number" id="activeDays" min="1" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white" required>
          </div>
          <div>
            <label class="block text-sm font-medium text-accent mb-2">Usage Limit</label>
            <input type="number" id="usageLimit" min="1" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white" required>
          </div>
          <div>
            <label class="block text-sm font-medium text-accent mb-2">Event</label>
            <select id="eventSelect" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white" required>
              <!-- Options dynamically populated -->
            </select>
          </div>
          <button type="submit" class="w-full px-4 py-2 bg-primary text-primary-foreground rounded-sm hover:bg-destructive transition-colors">
            Generate Code
          </button>
        </form>
      </div>
      <div class="p-4 border border-border rounded-sm">
        <h3 class="text-lg font-semibold text-foreground mb-4">Active Promo Codes</h3>
        <div id="promoList" class="space-y-2">
          <!-- Promo codes dynamically populated -->
        </div>
      </div>
    </div>
  </div>
</section>


    </main>
  </div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const eventSelect = document.getElementById("eventSelect");
    const promoList = document.getElementById("promoList");

    // Fetch available events (Replace with actual fetch logic)
    const events = [
      { id: 1, title: "Tech Conference 2024" },
      { id: 2, title: "Music Festival" },
    ];

    // Populate event dropdown
    events.forEach(event => {
      const option = document.createElement("option");
      option.value = event.id;
      option.textContent = event.title;
      eventSelect.appendChild(option);
    });

    document.getElementById("promoForm").addEventListener("submit", function (e) {
      e.preventDefault();
      const code = document.getElementById("code").value;
      const discount = document.getElementById("discount").value;
      const activeDays = document.getElementById("activeDays").value;
      const usageLimit = document.getElementById("usageLimit").value;
      const eventId = eventSelect.value;

      // Calculate expiration date
      const expirationDate = new Date();
      expirationDate.setDate(expirationDate.getDate() + parseInt(activeDays));

      // Add promo to the UI
      addPromoToList(code, discount);

      console.log({
        code,
        discount,
        expirationDate: expirationDate.toISOString(),
        usageLimit,
        eventId
      });

      // Reset form
      this.reset();
    });

    function addPromoToList(code, discount) {
      const promoItem = document.createElement("div");
      promoItem.className = "flex justify-between items-center p-2 bg-muted rounded-sm";
      promoItem.innerHTML = `
        <span class="font-medium text-foreground">${code}</span>
        <div>
        <span class="text-chart-2">${discount}% OFF</span>
        <button class="text-red-500 hover:text-red-700 font-bold ml-4 delete-btn">X</button>
        </div>
      `;

      // Delete promo when button is clicked
      promoItem.querySelector(".delete-btn").addEventListener("click", function () {
        promoItem.remove();
      });

      promoList.appendChild(promoItem);
    }
  });
</script>
</body>
</html>
