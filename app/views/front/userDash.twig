<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Event Management Profile – Dark Theme</title>
  <!-- Font Awesome for ticket icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Global dark theme overrides */
    body {
      background-color: #333;
      color: #eee;
    }
    /* These classes override Tailwind’s defaults to fit our dark theme */
    .bg-card {
      background-color: #444;
    }
    .border-border {
      border-color: #555;
    }
    .text-foreground {
      color: #eee;
    }
    .text-accent {
      color: #f39c12;
    }
    .bg-primary {
      background-color: #e74c3c;
    }
    .text-primary-foreground {
      color: #fff;
    }
    .bg-secondary {
      background-color: #3498db;
    }
    .text-secondary-foreground {
      color: #fff;
    }
    .bg-muted {
      background-color: #555;
    }
    .text-chart-2 {
      color: #2ecc71;
    }
    .text-chart-3 {
      color: #9b59b6;
    }

  </style>
</head>
<body class="min-h-screen">
  <div class="flex">
    <!-- Sidebar Navigation -->
    <aside class="fixed inset-y-0 left-0 w-64 bg-card shadow-sm border-r border-border">
      <div class="p-4 border-b border-border">
        <div class="flex items-center gap-2">
          <img src="https://images.unsplash.com/photo-1517292987719-0369a794ec0f" alt="Logo" class="w-8 h-8 rounded-full">
          <h1 class="text-xl font-bold text-foreground">EventHub</h1>
        </div>
      </div>
      <nav class="p-4 space-y-2">
        <a href="#" class="flex items-center gap-2 p-2 rounded-sm text-primary hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Dashboard</span>
        </a>
        <a href="/createEvent" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Create Event</span>
        </a>
        <a href="#events" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Event Management</span>
        </a>
        <a href="#sales" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Sales & Registration</span>
        </a>
        <a href="#promo" class="flex items-center gap-2 p-2 rounded-sm text-accent hover:bg-primary hover:text-primary-foreground transition-colors">
          <span>Promotional Tools</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="ml-64 p-8 w-full space-y-8">
      <!-- Dashboard Section -->
      <section id="dashboard" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
            <h3 class="text-lg font-semibold text-foreground mb-2">Total Events</h3>
            <p class="text-3xl font-bold text-primary">24</p>
          </div>
          <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
            <h3 class="text-lg font-semibold text-foreground mb-2">Active Registrations</h3>
            <p class="text-3xl font-bold text-chart-2">156</p>
          </div>
          <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
            <h3 class="text-lg font-semibold text-foreground mb-2">Revenue</h3>
            <p class="text-3xl font-bold text-chart-3">$12,450</p>
          </div>
        </div>
      </section>

      <!-- Sales Section -->
      <section id="sales" class="mb-8">
        <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-foreground">Sales Overview</h2>
            <div class="flex gap-4">
              <button class="px-4 py-2 bg-secondary text-secondary-foreground rounded-sm hover:bg-muted transition-colors">Export CSV</button>
              <button class="px-4 py-2 bg-secondary text-secondary-foreground rounded-sm hover:bg-muted transition-colors">Export PDF</button>
            </div>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-muted">
                <tr>
                  <th class="p-4 text-left text-sm font-medium text-accent">Event Name</th>
                  <th class="p-4 text-left text-sm font-medium text-accent">Tickets Sold</th>
                  <th class="p-4 text-left text-sm font-medium text-accent">Revenue</th>
                  <th class="p-4 text-left text-sm font-medium text-accent">Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border">
                <tr>
                  <td class="p-4 text-foreground">Tech Conference 2024</td>
                  <td class="p-4 text-foreground">45/100</td>
                  <td class="p-4 text-foreground">$4,500</td>
                  <td class="p-4">
                    <span class="px-2 py-1 bg-chart-2 text-primary-foreground rounded-sm text-sm">Active</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <!-- Promotional Tools Section -->
      <section id="promo" class="mb-8">
        <div class="bg-card p-6 rounded-sm shadow-sm border border-border">
          <h2 class="text-2xl font-bold text-foreground mb-6">Promotional Tools</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="p-4 border border-border rounded-sm">
              <h3 class="text-lg font-semibold text-foreground mb-4">Create Promo Code</h3>
              <form class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-accent mb-2">Code</label>
                  <input type="text" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white">
                </div>
                <div>
                  <label class="block text-sm font-medium text-accent mb-2">Discount (%)</label>
                  <input type="number" class="w-full p-2 border border-input rounded-sm focus:ring-2 focus:ring-ring focus:outline-none bg-gray-800 text-white">
                </div>
                <button type="submit" class="w-full px-4 py-2 bg-primary text-primary-foreground rounded-sm hover:bg-destructive transition-colors">
                  Generate Code
                </button>
              </form>
            </div>
            <div class="p-4 border border-border rounded-sm">
              <h3 class="text-lg font-semibold text-foreground mb-4">Active Promo Codes</h3>
              <div class="space-y-2">
                <div class="flex justify-between items-center p-2 bg-muted rounded-sm">
                  <span class="font-medium text-foreground">SUMMER2024</span>
                  <span class="text-chart-2">20% OFF</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</body>
</html>
